<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".ProductDetailsActivity">

                    <ImageView
                        android:id="@+id/detailed_image"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_margin="10dp"
                        android:scaleType="centerCrop"

                        />
                    <TextView
                        android:id="@+id/product_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arialround"

                        android:layout_below="@+id/detailed_image"
                        android:text="Product Name"
                        android:textColor="@color/some_green"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        />


                    <TextView
                        android:id="@+id/product_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_name"
                        android:text="Product Description"
                        android:textColor="@color/some_green"
                        android:fontFamily="@font/arialround"

                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        />



                    <TextView
                        android:id="@+id/product_prc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_desc"
                        android:fontFamily="@font/arialround"

                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="175dp"

                        android:text="Price"
                        android:textColor="@color/some_green"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/product_prc_perKg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_prc"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="3dp"

                        android:fontFamily="@font/arialround"

                        android:text="(Cost Per Kg)"
                        android:textColor="@color/some_green"
                        android:textSize="18dp" />




                    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton

                        android:id="@+id/quantity"
                        android:layout_width="160dp"
                        android:layout_height="60dp"
                        android:layout_below="@+id/product_prc_perKg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/arialround"

                        app:finalNumber="5"
                        app:initialNumber="1"
                        app:textSize="12dp">

                    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

                    <Button
                        android:id="@+id/btn_cart"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arialround"

                        android:text="Add To Cart"
                        android:textAllCaps="false"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textColor="@color/white"/>








</RelativeLayout>