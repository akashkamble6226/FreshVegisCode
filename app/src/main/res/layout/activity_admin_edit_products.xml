<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AdminEditProductsActivity"
    android:elevation="15dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >





        <ImageView
            android:id="@+id/edit_product_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"/>


        <EditText
            android:id="@+id/edit_product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/arialround"

            android:hint="Product Name"
            android:textSize="20dp"
            android:layout_below="@+id/edit_product_image"
            android:textAlignment="center"
            android:background="@drawable/logbut"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"/>


        <EditText
            android:id="@+id/edit_product_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/arialround"

            android:hint="Price"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:inputType="number"
            android:layout_below="@+id/edit_product_name"
            android:background="@drawable/logbut"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            />



        <EditText
            android:id="@+id/edit_product_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Product Description"
            android:fontFamily="@font/arialround"

            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_below="@+id/edit_product_price"
            android:background="@drawable/logbut"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            />


        <Button
            android:id="@+id/edit_product_btn"
            android:fontFamily="@font/arialround"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Update"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_product_description"
            android:background="@drawable/buy_now2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            />

        <Button
            android:id="@+id/delete_product_btn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:fontFamily="@font/arialround"

            android:text="Delete"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/edit_product_btn"
            android:background="@drawable/delete"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="50dp"
            />








    </RelativeLayout>
    </ScrollView>

</androidx.cardview.widget.CardView>