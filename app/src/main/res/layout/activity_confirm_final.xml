<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arialround"

        android:text="Please Write Your shipment Details "
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
    />


    <TextView
        android:id="@+id/CartValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Cart Value"
        android:textSize="18dp"
        android:fontFamily="@font/arialround"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_below="@+id/text"




        />

    <EditText
        android:fontFamily="@font/arialround"

        android:id="@+id/shipment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Name"

        />

    <EditText
        android:id="@+id/shipment_phone_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arialround"

        android:layout_below="@+id/shipment_name"
        android:inputType="number"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Phone No"

        />


    <EditText
        android:id="@+id/shipment_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arialround"

        android:layout_below="@+id/shipment_phone_no"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your Home address"

        />

    <EditText
        android:id="@+id/shipment_City"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arialround"

        android:layout_below="@+id/shipment_address"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your City name"

        />

    <Button
        android:id="@+id/shipment_confirm_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arialround"

        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm Order"
        android:textAllCaps="false"
        android:background="@drawable/buy_now"
        android:textColor="@color/white"
        android:textSize="20dp"
        />

</RelativeLayout>