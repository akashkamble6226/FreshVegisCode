<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/faint"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"

    >











            <RelativeLayout
                android:id="@+id/firstTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_marginBottom="-20dp"

                >


                                <Button
                                    android:id="@+id/bhaji"
                                    android:layout_width="140dp"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/arialround"

                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginBottom="20dp"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/insert"
                                    android:drawableBottom="@drawable/ic_add_black_24dp"
                                    android:padding="5dp"
                                    android:text="Add Vegetable"
                                    android:textAlignment="center"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />


                                    <Button
                                        android:id="@+id/Edit_products_info"
                                        android:layout_width="140dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="20dp"
                                        android:layout_marginLeft="50dp"
                                        android:fontFamily="@font/arialround"

                                        android:layout_gravity="center_horizontal"

                                        android:layout_marginBottom="20dp"
                                        android:background="@drawable/buy_now2"
                                        android:drawableBottom="@drawable/ic_mode_edit_black_24dp"
                                        android:padding="5dp"
                                        android:layout_toRightOf="@+id/bhaji"
                                        android:text="Edit   Vegetable"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="20dp" />

            </RelativeLayout>

            <Button
                android:id="@+id/AllOrders"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/arialround"

                android:layout_marginBottom="20dp"
                android:background="@drawable/buy_now"
                android:drawableBottom="@drawable/ic_fullscreen_black_24dp"
                android:padding="5dp"
                android:text="View       Orders"


                android:textAlignment="center"
                android:layout_below="@+id/firstTwo"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

                <Button
                    android:id="@+id/adminLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arialround"

                    android:text="Logout"
                    android:textAllCaps="false"
                    android:layout_alignParentBottom="true"
                    android:background="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textColor="@color/white"


                    />



















</RelativeLayout>