<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/faint"
    android:layout_height="match_parent"


    tools:context=".admin_add_new_product">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <ImageView
                    android:id="@+id/select_vegetable_image"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gross1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"

                    />

                <EditText
                    android:id="@+id/vegetable_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arialround"
                    android:hint="Vegetable Name"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:background="@drawable/vegetable_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"

                    />


                <EditText
                    android:id="@+id/vegetable_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arialround"
                    android:hint="Vegetable Description"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/vegetable_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"

                    />



                <EditText
                    android:id="@+id/vegetable_Price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Price"
                    android:fontFamily="@font/arialround"
                    android:inputType="number"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:background="@drawable/vegetable_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="20dp"

                    />


                <ProgressBar
                    android:id="@+id/newprogressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    />

                <Button
                    android:id="@+id/add_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/arialround"
                    android:text="Add Vegetable"
                    android:textAllCaps="false"
                    android:background="@drawable/buy_now"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:textSize="20dp"
                    android:layout_marginBottom="50dp"

                    />








            </LinearLayout>

    </ScrollView>


</RelativeLayout>