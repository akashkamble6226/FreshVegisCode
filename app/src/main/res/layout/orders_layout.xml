<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorPrimary"
        android:padding="15dp"

        >

        <TextView
            android:id="@+id/order_user_name"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/arialround"

            android:text="User Name"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/order_phone_no"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:text="Phone Number"
            android:fontFamily="@font/arialround"

            android:textAlignment="viewEnd"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/order_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/arialround"

            android:text="Total Price"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_below="@+id/in_cart_qty"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"
            />


        <TextView
            android:id="@+id/order_address_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Address,city"
            android:textSize="14dp"
            android:fontFamily="@font/arialround"

            android:textColor="@color/white"
            android:layout_below="@+id/order_total_price"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/order_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Date Time"
            android:textSize="14dp"
            android:fontFamily="@font/arialround"

            android:textColor="@color/white"
            android:layout_below="@+id/order_address_city"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="10dp"
            />


        <Button
            android:id="@+id/show_orderd_products"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/arialround"
            android:background="@color/colorPrimaryDark"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:text="Show Orderd Products"
            android:textAllCaps="false"
            android:layout_below="@+id/order_date_time"
            />


        <TextView
            android:id="@+id/ReadyOrNot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_done_black_24dp"
            android:textSize="14dp"
            android:fontFamily="@font/arialround"
            android:visibility="gone"
            android:textColor="@color/white"
            android:layout_below="@+id/show_orderd_products"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />


    </RelativeLayout>

</RelativeLayout>